{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "outDir": "./dist",
  },
  "include": [
    "./hardhat.config.ts",
    "./index.ts",
    "./lib/*",
    "./types/*",
    "./scripts/*",
    "./tasks/*",
    // "./test/contracts/*", // needs to be commented out out to be able to compile and in to make VS Code find ethers in tests
    // "./test/circuits/*", // needs to be commented out out to be able to compile and in to make VS Code find ethers in tests
    "index.ts"
  ],
}