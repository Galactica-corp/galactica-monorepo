    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
    ],
    "outDir": "./dist",
  },
  "include": [
    "./index.ts",
    "./src/*",
    "index.ts"
  ],
