{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "./dist",
        "resolveJsonModule": true
    },
    "include": [
        "./index.ts",
        "./src/*",
        "./test/*",
        "index.ts"
    ]
}