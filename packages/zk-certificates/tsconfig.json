{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "types"],
    "outDir": "./dist"
  },
  "include": [
    "./hardhat.config.ts",
    "./index.ts",
    "./lib/*",
    "./types/*",
    "./scripts/**/*.ts",
    "./tasks/*",
    // "./test/contracts/*",
    // "./test/circuits/*",
    "./test/lib/*",
    "index.ts"
  ]
}
